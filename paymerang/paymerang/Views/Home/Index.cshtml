<!DOCTYPE html>
<!-- Using model binding on front end -->

using JsonData.Models
model JsonData.Models.PayInfo


<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {background-color: #f5f5f5;
        width: 1000px;}
        h1   {color: #5a1414;}
        p    {color: #blue;}
        table{width: 400px;
        }
        table, th, td {
        border: 1px solid black;
        width: 100%;
        }
        th {
        height: 50px;
        text-align: left;
        max-width:100%;
        white-space:nowrap;
        }
        th, td {
        padding: 15px;
        text-align: left;
        }   

        tr:hover {background-color: #f5f5f5;}
        .headers{width: 800px;}
        #FirstCell{
            width:800px;
        }
        .headers{
            width: 800px;
        }
    </style>
    
</head>
<body>
    <h1 id="fancy">Paymerang</h1>
    <h2 id="fancy">Unleash the Power of Electronic Payments </h2>
    
  <div style="overflow-x:auto;">
    <table>
        <div class="headers">
            <th id="FirstCell">PayInfo</th>
            <th id="SecondCell">Payment Address</th>
            <th id="ThirdCell">Remittance</th>
        </div>
        <h1>Pay Data</h1>
        foreach (var payeeDetails in Model){
            <tr>payeeDetails.Payee</tr>
            <td>payeeDetails.Payee.PayeeName</td>
            <td>payeeDetails.Payee.PayeeFax</td>
            <td>payeeDetails.Payee.PayeePhone</td>
            <td>payeeDetails.Payee.PayeeAddress</td>
            <td>payeeDetails.Payee.Attention</td>
            <td>payeeDetails.Payee.SubmissionDate</td>
            <td>payeeDetails.Payee.PaymentExp</td>

            <tr>payeeDetails.Payment.PAN</tr>
            <td>payeeDetails.Payment.CVV</td>
            <td>payeeDetails.Payment.EXP</td>

            <tr>payeeDetails.Address.Address1</tr>
            <td>payeeDetails.Address.Address2</td>
            <td>payeeDetails.Address.City</td>
            <td>payeeDetails.Address.StateOrProvince</td>
            <td>payeeDetails.Address.Zip</td>

            <tr>payeeDetails.Remittance.PayorName</tr>
            <td>payeeDetails.Remittance.PayorID</td>
            <td>payeeDetails.Remittance.InvoiceNo</td>
            <td>payeeDetails.Remittance.Description</td>
            <td>payeeDetails.Remittance.Amount</td>

        }
    </table>
   </div>
</body>
</html>
